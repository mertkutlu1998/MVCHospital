@model IEnumerable<DatabaseLayer.PatientTestDetailTable>

@{
    ViewBag.Title = "ViewDetails";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Medcare Medical</title>
    <meta name="description" content="">
    <!-- Mobile Specific Meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- <link rel="shortcut icon" href="img/favicon.png"> -->

    <link href="http://fonts.googleapis.com/css?family=Lato:300,400,700" rel="stylesheet" />

    <!-- Syntax Highlighter -->
    <link rel="stylesheet" type="text/css" href="~/Content/DashboardTemplate/syntax-highlighter/styles/shCore.css" media="all">
    <link rel="stylesheet" type="text/css" href="~/Content/DashboardTemplate/syntax-highlighter/styles/shThemeDefault.css" media="all">

    <!-- Font Awesome CSS-->
    <link rel="stylesheet" href="~/Content/DashboardTemplate/css/font-awesome.min.css">
    <!-- Normalize/Reset CSS-->
    <link rel="stylesheet" href="~/Content/DashboardTemplate/css/normalize.min.css">
    <!-- Main CSS-->
    <link rel="stylesheet" href="~/Content/DashboardTemplate/css/main.css">
    <link rel="stylesheet" type="text/css" href="~/Content/LoginTemplate/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/LoginTemplate/css/main.css">
    <link rel="stylesheet" href="~/Content/FrontTemplate/css/bootstrap.css">
    <link rel="stylesheet" href="~/Content/FrontTemplate/css/themify-icons.css">
    <link rel="stylesheet" href="~/Content/FrontTemplate/css/flaticon.css">
    <link rel="stylesheet" href="~/Content/FrontTemplate/vendors/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="~/Content/FrontTemplate/vendors/owl-carousel/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/FrontTemplate/vendors/animate-css/animate.css">
    @*main css*@
    <link rel="stylesheet" href="~/Content/FrontTemplate/css/style.css">
    <link rel="stylesheet" href="~/Content/FrontTemplate/css/responsive.css">
</head>
<body>


    
<h2>Report Result</h2>
<div class="card shadow mb-4 " id="yazdırılacak">
    <div class="card-header py-3">


        <input type="submit" class="btn btn-success form-control col-md-3" style="float:right;" value="Print Report " onclick="window.print()" />
        <div class="table-responsive">
            <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
                <tr>
                    <td>
                        Test Title :  <h3 style="color:black;"> @ViewBag.TestName</h3>

                    </td>
                    <td>
                        Lab Title :         <h3 style="color:black;"> @ViewBag.Lab</h3>

                    </td>
                    <td>
                        Patient Name : <h3 style="color:black;"> @ViewBag.Patient</h3>

                    </td>
                </tr>
                <tr>

                    <td>
                        Appointment No : <h3 style="color:black;"> @ViewBag.AppointmentNo</h3>

                    </td>
                    <td>
                        <img src=" @Url.Content(ViewBag.LabLogo)" style="height:25%; width:25%;" />

                    </td>
                    <td>
                        @{
                            if (ViewBag.PatientPhoto != null)
                            {
                                <img src=" @Url.Content(ViewBag.PatientPhoto)" style="height:25%; width:25%;" />
                            }
                            else
                            {
                                <p>N/A</p>
                            }
                        }

                    </td>
                </tr>

            </table>


        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                Details
                            </th>
                            <th>
                                Min Value
                            </th>
                            <th>
                                Max Value
                            </th>
                            <th>
                                Patient Value
                            </th>

                        </tr>
                    </thead>
                    <tbody id="searchvalue">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LabTestDetailsTable.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LabTestDetailsTable.MinValue)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LabTestDetailsTable.MaxValue)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PatientValue)

                                </td>


                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
}

    

</body>
</html>
