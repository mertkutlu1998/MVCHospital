@model IEnumerable<DatabaseLayer.LabTestTable>

@{
    ViewBag.Title = "All Test";
}

<h2>All Test</h2>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<script src="~/Scripts/jquery-3.4.1.js"></script>
<h2>User Type</h2>
<br />
<div class="login-page">
    <div class="form">
        <p>
            @Html.ActionLink("New Test", "AddTest", "LabSetting", new { @class = "btn btn-success" })
        </p>
        <p><input type="text" name="searchtype" id="searchtype" class="form-control col-md-3" style="float:right;" placeholder="Search Here" /></p>
        <br />  
        <table class="table" id="dataTable">
            <thead class="thead-light">
                <tr>
                    <th>
                        Test Title
                    </th>
                    <th>
                        Cost
                    </th>
                    <th>
                        Action
                    </th>
                    <th></th>
                   
                </tr>
            </thead>
            <tbody id="searchvalue">

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cost)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LabTable.Name)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditTest", new { id = item.LabTestID },new {@class="btn btn-warning"})

                            
                            @Html.ActionLink("Test Details", "TestDetails", new { id = item.LabTestID }, new { @class = "btn btn-primary" })
                            @*@Html.ActionLink("Delete", "Delete", new { id = item.LabTestID })*@
                        </td>
                    </tr>
                }
            </tbody>


        </table>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#searchtype").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#searchvalue tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>

