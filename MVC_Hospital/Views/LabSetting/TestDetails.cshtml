@model IEnumerable<DatabaseLayer.LabTestDetailsTable>

@{
    ViewBag.Title = "Test Details";
}

<h2>Test Details</h2>

<p>
</p>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<script src="~/Scripts/jquery-3.4.1.js"></script>
<h2>User Type</h2>
<br />
<div class="login-page">
    <div class="form">
        <p> @Html.ActionLink("Add Details", "AddTestDetails", "LabSetting", new { @class = "btn btn-success" })</p>
       
       <p> <input type="text"  name="searchtype" id="searchtype" class="form-control input-group-text col-4" style="float:right;" placeholder="Search Here" /></p>
        <table class="table" id="dataTable">
            
            <thead class="thead-light">
               
                <tr>
                    <th>
                        Test Title
                    </th>
                    <th>
                        Details
                    </th>
                    <th>
                        Min Value
                    </th>
                    <th>
                        Max Value
                    </th>


                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="searchvalue">

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.LabTestTable.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MinValue)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaxValue)
                        </td>


                        <td>
                            @Html.ActionLink("Edit", "EditTestDetails", new { id = item.LabTestDetailID }, new { @class = "btn btn-primary" })

                        </td>
                    </tr>
                }
            </tbody>


        </table>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $("#searchtype").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#searchvalue tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
