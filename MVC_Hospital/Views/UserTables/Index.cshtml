@model IEnumerable<DatabaseLayer.UserTable>

@{
    ViewBag.Title = "All User";
}

<h2>All User</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<script src="~/Scripts/jquery-3.4.1.js"></script>
<h2>User Type</h2>
<br />
<div class="login-page">
    <div class="form">
        <p>
            @Html.ActionLink("New Test", "Create", null, new { @class = "btn btn-primary" })
        </p>

        <input type="text" name="searchtype" id="searchtype" class="form-control col-md-3" style="float:right;" placeholder="Search Here" />

        <table class="table" id="dataTable">
            <thead class="thead-light">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.Password)
                    </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsVerifed)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserTypeTable.UserType)
                    </th>
                    <th>
                    <th>
                </tr>
            <tbody id="searchvalue">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsVerifed)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserTypeTable.UserType)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.UserID }, new { @class = "btn btn-primary" })

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>




<script type="text/javascript">
    $(document).ready(function () {
        $("#searchtype").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#searchvalue tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
