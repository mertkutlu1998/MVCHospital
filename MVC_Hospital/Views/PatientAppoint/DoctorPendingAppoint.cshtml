@model IEnumerable<DatabaseLayer.DoctorAppointTable>

@{
    ViewBag.Title = "Doctor Pending Appointments";
}

<h2>Doctor Pending Appointment</h2>





<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<div class="card shadow mb-4">
    <div class="card-header py-3">
      

        <input type="text" name="searchtype" id="searchtype" class="form-control col-md-3" style="float:right;" placeholder="Search Here" />
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead>

                    <tr>
                        <th>
                            Patient
                        </th>


                        <th>
                            Doctor
                        </th>
                        <th>
                            Time Slot
                        </th>

                        <th>
                            Appoint Date
                        </th>
                        <th>
                            Fee Pendin Status
                        </th>

                        <th>
                            Transection No
                        </th>
                        <th>
                            Description
                        </th>

                    </tr>
                </thead>
                <tbody id="searchvalue">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.PatientTable.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DoctorTable.Name)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.DoctorTimeSlotTable.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AppointDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsFeeSubmit)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TransectionID)
                            </td>


                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>






                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#searchtype").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#searchvalue tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
