
@model IEnumerable<DatabaseLayer.LabTestTable>

@{
    ViewBag.Title = "LabTests";
}

<h2>Lab All Tests</h2>


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <input type="text" name="searchtype" id="searchtype" class="form-control col-md-3" style="float:right;" placeholder="Search Here" />
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Test Name
                        </th>
                        <th>
                            Cost
                        </th>
                        <th>
                           Lab Name
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="searchvalue">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cost)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LabTable.Name)
                            </td>
                            <td>
                                @Html.ActionLink("Select", "LabAppointment", new { id = item.LabTestID }, new { @class = "btn btn-success btn-circle" })

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



<script type="text/javascript">
    $(document).ready(function () {
        $("#searchtype").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#searchvalue tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
