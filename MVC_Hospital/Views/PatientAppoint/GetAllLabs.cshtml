@model IEnumerable<DatabaseLayer.LabTable>

@{
    ViewBag.Title = "All Labs";
}

<h2>All Labs</h2>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <input type="text" name="searchtype" id="searchtype" class="form-control col-md-3" style="float:right;" placeholder="Search Here" />
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead>

                    <tr>



                        <th>
                            Labs
                        </th>
                        <th>
                            Photo
                        </th>
                        <th>
                            Contact No
                        </th>
                        <th>
                            Phone No
                        </th>
                        <th>
                            Email Adress
                        </th>
                    
                        <th>
                            Clinic Adress
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>

                <tbody id="searchvalue">

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @{ if (!string.IsNullOrEmpty(item.Photo))
                                    {
                                        <img src="@Url.Content(item.Photo)" alt="Image" style="width:50px;height:50px;max-width:100%; height:auto;" />
                                    }
                                    }
                                </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ContactNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmailAddress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PermanentAddress)
                            </td>
                           
                            <td>
                                @Html.ActionLink("Appointment", "LabTests", new { id = item.LabID }, new { @class = "btn btn-primary" })
                                 
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



<script type="text/javascript">
    $(document).ready(function () {
        $("#searchtype").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#searchvalue tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
